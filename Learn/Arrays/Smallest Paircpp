#include <bits/stdc++.h>
using namespace std;

int32_t main(){

    
    int32_t number;
    cin >> number;
    while (number--)
    {
        int32_t n;
        cin >> n;
        int32_t num[n];
        for(int i=0; i<n; i++){
            cin >> num[i];
        }  
        int32_t tot = 0;
        int32_t min = INT32_MAX;
        for(int i=0; i < n; i++){
            for(int j=i+1; j < n ; j++){
                tot = (num[i]) + (num[j]) + (j - i);
                if(tot < min) min = tot;
            }
        }
        cout << min << endl;
    }

    return 0;
}